<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categorii.Securitate">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="25dp"
                android:scrollbars="vertical">

                <ImageView
                    android:id="@+id/securit_function1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/photo4"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="#73151515"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/securit_function1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Securitate"
                    android:textColor="#fff"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/securit_function1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/anunta_ma_cand_emailul_meu_a_fost_spart"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/card1"
                android:paddingTop="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/securit_function2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/photo4"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="#73151515"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/securit_function2"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Securitate"
                    android:textColor="#fff"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/securit_function2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/sa_se_efectueze_o_curatare_a_telefonului_cand_e_necesara"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </TableLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>